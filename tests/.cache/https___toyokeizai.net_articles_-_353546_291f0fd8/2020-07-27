<script async defer crossorigin="anonymous" src="https://connect.facebook.net/ja_JP/sdk.js#xfbml=1&autoLogAppEvents=1&version=v7.0&appId=148323531980790" nonce="DN4DTJbL"></script>
<script>
var setFbShareCount = function(){
  $('.fb-custom-share-count').each(function(i,o){
    var $o = $(o);
    var id = $o.data('href');
    $.ajax({
      url:'https://graph.facebook.com/',
      data:{ids: id,fields: 'og_object{engagement}'},
      dataType: 'jsonp',
      type:'post'
    }).done(function(data){
      try{
        var count = data[id].og_object.engagement.count;
        if (count >= 10000) {
          count = Math.ceil(count/1000) / 10 + '万';
        }
        $o.text(count);
      }catch(err){}
    });
  });
};
$(function(){
  setFbShareCount();
  $('.fb-custom-share-button a').on('click',function(){
    var href = $(this).data('href');
    FB.ui({
      method: 'share',
      mobile_iframe: true,
      href: href,
      hashtag: '#東洋経済オンライン'
    },function(response){
      setTimeout(setFbShareCount(),500);
    });
    return false;
  });
});
</script>



