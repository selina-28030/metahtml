<script type="text/javascript">
$(window).load(function(){
  setTimeout(function(){
    var sticky = false;
    var stickyad = $('#sub-column div.ad-bnr:eq(4)');
    var stickyad_margin = 15;
    var subcolumn = $('#sub-column');
    var stickyad_top = stickyad.position()['top']
    stickyad_top -= subcolumn.position()['top'];
    stickyad_top -= (parseInt(subcolumn.css('margin-top'),10)||0);
    var footer = $('#footer');
    $(window).unbind('scroll.sticky').bind('scroll.sticky',function(){
      if (stickyad.height() >= ($(this).height())) return false;
      if ((subcolumn.height() ) > $('#main-column').height()) return false;
      var t = $(this).scrollTop();
      var th = $(this).height();
      var h = $('#header').height() + (parseInt($('#header').css('margin-bottom'),10)||0);
      h += $('#sitenavi').height() + (parseInt($('#sitenavi').css('margin-bottom'),10)||0);
      h += stickyad_top;
      var f = footer.position()['top'] + (parseInt(footer.css('margin-top'),10)||0);
      if ( (footer.position()['top'] - t) <= (stickyad.height() + stickyad_margin)  ) {
        var stickyad_margin_bottom = $(window).height() - (f - t);
        stickyad.css({'top':''}).css({'position':'fixed','bottom':stickyad_margin_bottom});
        sticky = false;
      } else if (h <= t) {
        if (!sticky) {
          stickyad.css({'bottom':''}).css({'position':'fixed','top':stickyad_margin});
          sticky = true;
        }
      } else {
        stickyad.css({'position':'static'});
        sticky = false;
      }
    });
  },3000)
});
</script>


<!-- /sub-column --></div>
