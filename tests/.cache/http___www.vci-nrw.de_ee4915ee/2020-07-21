var websiteCookies = document.cookie.split(';');
var cookieAlertAlreadyShown = false;
for(var i = 0; i < websiteCookies.length; i++) {
var c = websiteCookies[i];
while (c.charAt(0)==' ') {
c = c.substring(1);
}
if (c.indexOf("cookieAlertAlreadyShown=") == 0) {
cookieAlertAlreadyShown = true;
break;
}
}
if(!cookieAlertAlreadyShown){
$(".cookie-alert").removeClass("hidden");
}
