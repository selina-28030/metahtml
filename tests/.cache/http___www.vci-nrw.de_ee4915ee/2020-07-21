document.cookie = "cookieAlertAlreadyShown=true; path=/";
document.cookie = "cookieDecision=no; path=/";
docCookies.setItem('et_oi_v2', 'no', null, '/', '.vci.de', false );
$(".cookie-alert").addClass("hidden");
return false;
});
$("button#accept-cookie").click( function( event ) {
document.cookie = "cookieAlertAlreadyShown=true; path=/";
document.cookie = "cookieDecision=yes; path=/";
docCookies.setItem('et_oi_v2', 'yes', null, '/', '.vci.de', false );
$(".cookie-alert").addClass("hidden");
return false;
});
