<script type="text/javascript">
function menuChange() {

	var year = document.getElementById("yearMenu").value;
	var month = document.getElementById("monthMenu").value;
	//alert ("debug" + year + " " + month);
	var monthParam;
	if (month == null || month== '') {
		monthParam = '';
	} else {
		monthParam = '&month='+month
	}
	window.location.href = './?year='+year+monthParam;
}
</script>
