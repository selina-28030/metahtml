 jQuery.easing.custom = function (x, t, b, c, d) {
 var s = 1.70158; 
 if ((t/=d/2) < 1) return c/2*(t*t*(((s*=(1.525))+1)*t - s)) + b;
 return c/2*((t-=2)*t*(((s*=(1.525))+1)*t + s) + 2) + b;
 }
 //jQuery("div.scrollable").scrollable({easing: 'custom', speed: 2000, circular: true});

 var stos = []; 
 var pimage = new Image();
 var num = 0; 
 jQuery(document).ready(function(){
 
 jQuery("img[rel]").each(function(i, el){
 stos.push(new Array(jQuery(el), jQuery(el).attr('rel')));
 }); 
 loadImage();
 
 });
 
 function loadImage(){ 
 
 if(num < stos.length){
 pimage.src = stos[num][1];
 if(stos[num] && stos[num][0]){
 jQuery(stos[num][0]).parent().css('background-image', 'url('+stos[num][1]+')');
 }
 
 /*pimage.onload = function(){ //not working for cached images in ie6/7
 num = num+1; 
 setTimeout(function(){ loadImage(num); }, 10);
 
 }*/ 
 
 if(pimage.complete){
 num = num+1; 
 setTimeout(function(){ loadImage(num); }, 10); 
 }else{
 setTimeout(function(){ loadImage(num); }, 10); 
 }
 

 }
 }

