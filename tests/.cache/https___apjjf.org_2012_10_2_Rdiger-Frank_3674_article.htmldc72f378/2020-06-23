<script type="text/javascript">

jQuery(window).load(function(){
 jQuery('area.area_homepagemap').each(function(i, el){
 var title = jQuery(el).attr('alt');
 var imgURL = jQuery(el).attr('href'); 
 jQuery(el).removeAttr('target').attr('href', 'Javascript:void(0)');
 jQuery(el).bind("click", {title: title, imgURL: imgURL}, function(e){
 homepagemapShow(e.data.title, e.data.imgURL);
 });
 });
});


function DetailsPagemapShow(title, url,params){
 if(!params)params={};
 jQuery('<div>').addClass('areaamainpagemap_o').appendTo(document.body);
 jQuery('<div>').addClass('areaamainpagemap').addClass('loading').appendTo(document.body);
 jQuery('<div>').addClass('areaamainpagemap_t').html(title).appendTo('.areaamainpagemap');
 jQuery('<div>').addClass('areaamainpagemap_i').appendTo('.areaamainpagemap');

 jQuery('<div>').addClass('areaamainpagemap_close').prependTo('.areaamainpagemap_t').click(function(){
 jQuery('.areaamainpagemap_o').remove();
 jQuery('.areaamainpagemap').remove();
 }); 
 
 jQuery.ajax({
 type: "POST",
 url: url,
 data: params, 
 success: function(response){ 

 

 
 
 var W = 3156;jQuery('.map_map').width();
 var H = 2400;jQuery('.map_map').height()+36;

 var aW = jQuery(window).width()*0.9;
 var aH = jQuery(window).height()*0.9;
 var wsp = 1;

 if(W>aW){
 wsp = H/W;
 W = aW;
 H = W*wsp;
 }
 
 if(H>aH){
 wsp = W/H; 
 H = aH;
 W = H*wsp;
 }

 //window.open(imgURL);
 jQuery('.areaamainpagemap').removeClass('loading').css({
 'width': W+'px',
 'height': H+'px',
 'margin-left': -(W/2)+'px',
 'margin-top': -(H/2)+'px'
 });
 jQuery('.areaamainpagemap_t').show();
 jQuery('<div>').appendTo('.areaamainpagemap_i').css({'width': '100%'}).html(response); 
 
 jQuery('area.area_homepagemap').each(function(i, el){
 var title = jQuery(el).attr('alt');
 var imgURL = jQuery(el).attr('href'); 
 jQuery(el).removeAttr('target').attr('href', 'Javascript:void(0)');
 jQuery(el).bind("click", {title: title, imgURL: imgURL}, function(e){
 homepagemapShow(e.data.title, e.data.imgURL);
 });
 }); 
 
 
 jQuery('.map_map').draggable();
 jQuery('.legend_map').css({left:(W-220)+'px'})
 
 
 jQuery('.map_slider').slider({
 min:300,
 max:2*3156,
 value:W,
 slide: refreshSwatch,
 change: refreshSwatch 
 
 });
 
 }
 }); 
 
}

function refreshSwatch(){
 size = jQuery( ".map_slider" ).slider( "value" );
 
 var out_w = jQuery('.areaamainpagemap_i').width();
 var out_h = jQuery('.areaamainpagemap_i').height();
 
 var pic=jQuery('.areaamainpagemap_i .map_map').position();
 
 var pix_in_center = (out_w/2)-pic.left;
 var pix_in_center_t = (out_h/2)-pic.top;
 
 old_scala = 3156 / jQuery('.areaamainpagemap_i .map_map').width();
 
 new_scala = 3156 / size;
 
 var org_left = pix_in_center*old_scala;
 var org_top = pix_in_center_t*old_scala;
 
 var new_left = org_left/new_scala;
 var new_top = org_top/new_scala; 
 
 
 new_left = -(new_left - (out_w/2));
 new_top = -(new_top - (out_h/2));
 
 
 jQuery('.map_map').width(size);
 jQuery('.map_map').css({left:new_left, top:new_top});
 
}

function homepagemapShow(title, imgURL){

 jQuery('<div>').addClass('areahomepagemap_o').appendTo(document.body);
 jQuery('<div>').addClass('areahomepagemap').addClass('loading').appendTo(document.body);
 jQuery('<div>').addClass('areahomepagemap_t').html(title).appendTo('.areahomepagemap');
 jQuery('<div>').addClass('areahomepagemap_i').appendTo('.areahomepagemap');

 jQuery('<div>').addClass('areahomepagemap_close').prependTo('.areahomepagemap_t').click(function(){
 jQuery('.areahomepagemap_o').remove();
 jQuery('.areahomepagemap').remove();
 });
 
 var imageObj = new Image();
 imageObj.onload = function(){
 
 var W = imageObj.width;
 var H = imageObj.height+36;
 var aW = jQuery(window).width()*0.8;
 var aH = jQuery(window).height()*0.8;
 var wsp = 1;

 if(W>aW){
 wsp = H/W;
 W = aW;
 H = W*wsp;
 }
 
 if(H>aH){
 wsp = W/H; 
 H = aH;
 W = H*wsp;
 }

 //window.open(imgURL);
 jQuery('.areahomepagemap').removeClass('loading').css({
 'width': W+'px',
 'height': H+'px',
 'margin-left': -(W/2)+'px',
 'margin-top': -(H/2)+'px'
 });
 jQuery('.areahomepagemap_t').show();
 jQuery('<img>').attr({'src': imgURL}).appendTo('.areahomepagemap_i').css({'width': '100%'});
 
 
 }
 imageObj.src = imgURL;
 
}


</script>

