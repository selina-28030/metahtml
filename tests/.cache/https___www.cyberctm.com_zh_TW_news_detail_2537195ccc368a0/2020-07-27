    <script>
        $(function() {

            var scale = 0;

            $("#bigger-font").click(function(){
                if(scale == 2){
                    alert("已達到最大尺寸！");
                }else{
                    scale++;

                    var originSize = parseInt($('html').css("font-size"));
                    originSize = originSize + 1;
                    $('html').css("font-size",originSize);

                    $('.dotdotdot').trigger("update.dot");

                }
            });

            $("#smaller-font").click(function(){
                if(scale == -2){
                    alert("已為最小尺寸！");
                }else{
                    scale--;

                    var originSize = parseInt($('html').css("font-size"));
                    originSize = originSize - 1;
                    $('html').css("font-size",originSize);

                    $('.dotdotdot').trigger("update.dot");

                }
            });

            $("#mobile-font-control,#cf-shareBtn").click(function(){
                scale = (++scale) > 2 ? -2 : scale; //scale in range [0, 1, 2, 3, 4]

                $('html').css("font-size", 10 + scale);

                $('.dotdotdot').trigger("update.dot");
            });
        });
    </script>
    <script>

        function fixedDiv(div){
            var divSelector = $(div);
            var contentWrapperHeight = $('.news-content').height();
            var scrollHeight = $(document).scrollTop();
            if (($(this).scrollTop() >= 0) && ($(this).scrollTop() <= contentWrapperHeight)) {
                divSelector.css('top',scrollHeight);
            }else {
                divSelector.css('top','0px;');
            }
        }

        //fixed the next and previous button
        $(window).scroll(function(){
            fixedDiv('.next-news');
            fixedDiv('.previous-news');
        });
    </script>
    <script>
        $(function() {

            trigger = $('.news-shortcut-trigger');
            target = $('#news-shortcut-mobile');

            trigger.click(function(){
                target.toggleClass('active');

                if(trigger.hasClass('glyphicon-triangle-right')){
                    trigger.removeClass('glyphicon-triangle-right');
                    trigger.addClass('glyphicon-remove');

                    companySlider.resizeFix();
                    categorySlider.resizeFix();

                }else{
                    trigger.addClass('glyphicon-triangle-right');
                    trigger.removeClass('glyphicon-remove');
                }
            });
        });
    </script>
    <script>
        $(function() {
            companySlider = new Swiper('div#company-slider', {
                slidesPerView: 'auto',
                roundLengths: true,
                grabCursor: true,
                onSlideClick:function() {
                    companyId = companySlider.clickedSlide.data('value');
