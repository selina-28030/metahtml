        companySeletor = $('.news-shortcut-select[name="company"]');
        categorySeletor = $('.news-shortcut-select[name="category"]');
        newsSeletor = $('.news-shortcut-select[name="news"]');
        mobileCompanySeletor = $('#company-slider');
        mobileCategorySeletor = $('#category-slider');
        mobileNewsList = $('.news-shortcut-wrapper ul');

        function updateCompany(companyId){
            targetSlide = mobileCompanySeletor.find('.swiper-slide[data-value=' + companyId + ']');
            targetSlide.siblings().removeClass('active');
            targetSlide.addClass('active');

            targetOption = companySeletor.find('option[value=' + companyId + ']');
            targetOption.siblings().attr('selected', false);
            targetOption.attr('selected', true);

            company = categoryTree[companyId];

            categorySeletor.empty();
            categorySlider.removeAllSlides();

            var first = true;

            for (categoryId in company['category']) {

                if(first){
                    firstCategoryId = categoryId;
                    first = false;
                }

                var option = "<option value='" + categoryId + "'>" + company['category'][categoryId]['name'] + "</option>";
                categorySeletor.append(option);

                var newsSlide = categorySlider.createSlide(company['category'][categoryId]['name'], 'swiper-slide', 'li');
                newsSlide.data('value', categoryId);
                newsSlide.append();
            }

            updateCategory(firstCategoryId);

            if(company.name == '網友爆料'){
                categorySeletor.parent('li').hide();
                newsSeletor.parent('li').hide();
                window.location.replace('/zh_TW/news/fact/list');
            }else{
                categorySeletor.parent('li').show();
                newsSeletor.parent('li').show();
            }
        }

        function updateCategory(categoryId){

            targetSlide = mobileCategorySeletor.find('.swiper-slide[data-value=' + categoryId + ']');
            targetSlide.siblings().removeClass('active');
            targetSlide.addClass('active');

            targetOption = categorySeletor.find('option[value=' + categoryId + ']');
            targetOption.siblings().attr('selected', false);
            targetOption.attr('selected', true);

            updateNewsList(categoryId);

        }

        function updateNewsList(categoryId){

            $.ajax({
                url: '/zh_TW/news/lazyload',
                dataType: 'json',
                type: 'GET',
                data: {'category': categoryId},
            }).done(function(data){
                newsSeletor.empty();
                mobileNewsList.empty();
                for(key in data){
                    var option = "<option value='" + data[key]['id_s'] + "'>" + data[key]['title_t'] + "</option>";
                    newsSeletor.append(option);

                    var li = "<li data-value='" + data[key]['id_s'] + "'>" + data[key]['title_t'] + "</li>";
                    mobileNewsList.append(li);

                }
                mobileNewsList.children('li').click(function(){
                    newsId = $(this).data('value');
                    window.location.replace('/zh_TW/news/detail/' + newsId);
                });
            });

        }

        companySeletor.change(function() {
            selectedCompanyId = $(this).val();
            updateCompany(selectedCompanyId);

        });

        categorySeletor.change(function() {
            selectedCategoryId = $(this).val();
            updateCategory(selectedCategoryId);

        });
        newsSeletor.change(function() {
            newsId = $(this).val();
            window.location.replace('/zh_TW/news/detail/' + newsId);
        });

        mobileNewsList.children('li').click(function(){
            newsId = $(this).data('value');
            window.location.replace('/zh_TW/news/detail/' + newsId);
        });
    </script>
